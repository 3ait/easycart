$(function() {
   
  
    $(".addrEdit").mouseover(function() {
        $(".add_rdelete").css("display", "block");
    });
    $(".addrEdit").mouseout(function() {
        $(".add_rdelete").css("display", "none");
    });
    $(".send_add").click(function() {
        $(".send_newadd").css("display", "block");
    });
    $(".receive_add").click(function() {
        $(".receive_newadd").css("display", "block");
    });

});


$(function() {
    $(".r_info").click(function() {
        $(this).children(".rInput").css("height", "45px").css("background-color", "#e6e6e6;");
        $(this).children(".rInput")[0].focus();
    });
    $(".s_info").click(function() {
        $(this).children(".sInput").css("height", "45px").css("background-color", "#e6e6e6;");
        $(this).children(".sInput")[0].focus();
    });
});




