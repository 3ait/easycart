/*text*/
.product_detail{
    /*background-color: honeydew;*/
    margin-left: 150px;
    height: 435px;
}
.detail_text{
    width: 400px;
    height: 156px;
}
.detail_title{
    color: #535353;
    font-size: 20px;
	height:22px;
}
.detail_price{
    color: #f0c103;
    font-size: 16px;
    font-weight: bold;
    padding: 18px 0 18px 10px;
}
.detail_rmb{
    font-size: 12px;
    color: #535353;
    padding-bottom: 8px;
}
.detail_cur{
    font-size: 12px;
