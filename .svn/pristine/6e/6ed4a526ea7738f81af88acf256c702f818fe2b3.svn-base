	/*background-color:red;*/
}
.others{
    font-size: 14px;
    color: #535353;
    height: 28px;
}
.amount{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 260px;
    height: 20px;
    margin-top: 30px;
}
.detail_number{
    font-size: 16px;
    color: #535353;
}

.detail_quantity{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 98px;
    height: 20px;
}
.detail_quantity a{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 16px;
    width: 21px;
    border:1px solid #e6e6e6;
    text-align: center;
    text-decoration: none;

}
.detail_quantity a:hover{
    background-color: #e6e6e6;
}
.detail_quantity a:active{
    background-color: white;
}
.decrease{
    border-radius:2px;
    color: #535353;
    font-size: 14px;
    cursor: pointer;
}
.increase{
    border-radius:2px;
    color: #535353;
    cursor: pointer;
}

.detail_quantity .text-amount{
    width: 40px;
    height: 18px;
    border:1px solid #e6e6e6;
    border-radius:2px;
    color: #535353;
    font-size: 14px;

    text-align: center;
}
.detail_stock{
    font-size: 12px;
    color: #7d7d7d;
}
.detail_submit{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 300px;
    height: 16px;
    padding-top: 25px;
}
.cart_button {
    width: 110px;
    height: 35px;
    background-color: transparent;
    color: #f0c103;
    border:solid 2px #f0c103;
