img{cursor: pointer;}

li {
	list-style: none;
}

#containerOM {
	width: 1200px;
	margin: 0 auto;
	/*height: 5000px;*/
	/*background: gray;*/
}

#section1 {
	height: 90px;
	background: white;
	font-size: 20px;
	line-height: 90px;
	padding: 0 15px;
}

#section2 {
	width: 100%;
	/*background: cyan;*/
	display: flex;
}

.orderLeft {
	width: 186px;
	/*height: 444px;*/
	/*background: yellow;*/
}

.orderRight {
	width: 970px;
	/*height: 444px;*/
	/*background: purple;*/
	border: 2px solid #E6E6E6;
}

.orderMid {
	height: 100px;
	/*background: red;*/
	flex: 1;
}

.orderBar {
	height: 60px;
	background: #E6E6E6;
	font-size: 16px;
	color: #535353;
	line-height: 60px;
	padding-left:30px ;
	cursor: pointer;
}

.orderNav {
	height: 60px;
	line-height: 60px;
	padding-left:30px ;
	cursor: pointer;
}
.orderNav:HOVER{
	background: #E6E6E6;
}

.orderListBar {
	height: 60px;
	background: #E6E6E6;
	font-size: 16px;
	color: #535353;
	line-height: 60px;
	padding: 0 30px;
	display: flex;
}

.orderListBar div {
	margin: 0 5px;
}

.orderNavCh {
	margin: 10px 15px;
}

.orderNavCh li {
	margin: 0;
	line-height: 18px;
	font-size: 14px;
}

.detail {
	display: flex;
	text-align: center;
	line-height: 22px;
	/*background: brown;*/
}

.detailA {
	width: 530px;
	/*height:385px;*/
	/*background: red;*/
}

.detailB {
	border-left: 1px solid #E6E6E6;
	width: 160px;
	padding: 53px 0;
	font-size: 14px;
	font-weight: 900;
	color: #535353;
	/*background: greenyellow;*/
}

.detailC {
	border-left: 1px solid #E6E6E6;
	width: 140px;
	/*
	background: green;
	*/
	padding: 75px 0;
	font-size: 14px;
	color: #535353;
}

.eachP {
	height: 198px;
	background: #E6E6E6;
	display: flex;
}

.eachInfor {
	width: 310px;
	height: 198px;
	background: white;
	display: flex;
	justify-content: center;
	align-items: center;
}

.cPic {
	border: 1px solid #E6E6E6;
	width: 130px;
	height: 130px;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-right: 20px;
	cursor: pointer;
}

.cInfor {
	letter-spacing: 0px;
	width: 104px;
	color: #7d7d7d;
	font-size: 12px;
	/*background: red;*/
}

.eachPrice {
	width: 217px;
	height: 198px;
	background: white;
	font-size: 14px;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #535353;
}

.eachPriceD {
	margin: 0 20px;
}

.White150 {
	height: 150px;
	width: 100%;
	/*background: red;*/
}

.page {
	color: #7d7d7d;
	text-align: right;
	padding: 0 20px;
	cursor: pointer;
}
.orderList{
	display: flex;
	flex-flow: column;

}

.orderDetail {
	background: #E6E6E6;
	font-size: 16px;
	color: #535353;
	padding: 0 30px;
	display: none;
}
.detail_click{
	color:#7d7d7d;
	cursor: pointer;
}
.detail_click:HOVER{
	color: #535353;
}